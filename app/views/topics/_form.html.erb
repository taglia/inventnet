<%= form_for @topic, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Topic</legend>

    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :abstract, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :abstract, :class => 'text_area' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :owner_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :owner_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', topics_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
