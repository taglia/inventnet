<%= simple_form_for [@topic, @idea], :html => {:class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend><%= controller.action_name.capitalize %> Idea</legend>
      <br/>
      <div class="alert alert-info">
        You can use <a target="_blank" href="http://github.github.com/github-flavored-markdown/">github flavored Markdown</a> in your note.
      </div>

      <%= f.input :title -%>
      <%= f.input :content -%>


      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to 'Cancel', topic_path(@topic), :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
