<div class="page-header"><h1>Idea</h1></div>

<p>
  <b>Title</b><br>
  <%= @idea.title %>
</p>

<p>
  <b>Content</b><br>
  <%= @idea.content %>
</p>

<p>
  <b>Topic</b><br>
  <%= @topic.title %>
</p>

<div class="form-actions">
  <%= link_to 'Back', topic_path(@topic), :class => 'btn' %>
  <%- if @idea.user == current_user || @topic.owner == current_user -%>
      <%= link_to 'Edit', edit_topic_idea_path(@topic, @idea), :class => 'btn' %>
      <%= link_to 'Delete', topic_idea_path(@topic, @idea), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <%- end -%>
</div>
