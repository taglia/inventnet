<h1>New contributor</h1>
<br/>
<%= simple_form_for @contributor, url: topic_contributors_path, html: {class: "form-horizontal"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add", class: "btn btn-primary" %>
    <%= link_to 'Cancel', topic_contributors_path, :class => 'btn' %>
  </div>
<% end %>
